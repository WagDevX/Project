generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://root:root@database:5432/back-end?schema=public"
}


model Customer {
  id    Int    @id @default(autoincrement())
  name  String
  rides Ride[] @relation("CustomerRides")
}

model Driver {
  id          Int      @id @default(autoincrement())
  description String
  name        String
  car         String
  tax         Float
  review      Review?   @relation("DriverReviews")
  minKm       Int
  rides       Ride[] @relation("DriverRides")
}

model Review {
  id       Int    @id @default(autoincrement())
  rating   Int?
  comment  String?
  driver   Driver?  @relation("DriverReviews",fields: [driverId] , references: [id])
  driverId Int     @unique
}

model Ride {
  id          Int      @id @default(autoincrement())
  date        DateTime
  origin      String
  destination String
  distance    Float
  duration    String
  driverId    Int
  driver      Driver   @relation("DriverRides", fields: [driverId], references: [id])
  customer    Customer @relation("CustomerRides", fields: [customerId], references: [id])
  customerId  Int
  value       Float
}